{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ProjectBriefOutput",
  "type": "object",
  "additionalProperties": true,
  "required": ["title","objective","scope","deliverables","milestones","timeline_days","billing_plan"],
  "properties": {
    "title": { "type": "string" },
    "objective": { "type": "string" },
    "scope": {
      "oneOf": [
        { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        { "$ref": "#/$defs/Scope" }
      ]
    },
    "deliverables": {
      "oneOf": [
        { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        { "type": "array", "items": { "$ref": "#/$defs/Deliverable" }, "minItems": 1 }
      ]
    },
    "assumptions": { "type": "array", "items": { "type": "string" } },
    "milestones": { "type": "array", "items": { "$ref": "#/$defs/Milestone" }, "minItems": 1 },
    "timeline_days": { "type": "integer", "minimum": 1 },
    "billing_plan": { "type": "array", "items": { "$ref": "#/$defs/BillingPart" }, "minItems": 1 },
    "risks": {
      "oneOf": [
        { "type": "array", "items": { "type": "string" } },
        { "type": "array", "items": { "$ref": "#/$defs/Risk" } }
      ]
    },
    "commercial_terms": { "$ref": "#/$defs/CommercialTerms" },
    "seller": { "$ref": "#/$defs/Party", "description": "Optional display on brief" },
    "buyer": { "$ref": "#/$defs/Party", "description": "Optional display on brief" }
  },
  "$defs": {
    "Party": { "$ref": "quotation_output.schema.json#/$defs/Party" },
    "Scope": {
      "type": "object",
      "additionalProperties": true,
      "required": ["in_scope"],
      "properties": {
        "in_scope": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "out_of_scope": { "type": "array", "items": { "type": "string" } },
        "assumptions": { "type": "array", "items": { "type": "string" } },
        "dependencies": { "type": "array", "items": { "type": "string" } }
      }
    },
    "Deliverable": {
      "type": "object",
      "additionalProperties": true,
      "required": ["name", "description"],
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "format": { "type": "string" },
        "acceptance_criteria": { "type": "string" }
      }
    },
    "Milestone": {
      "type": "object",
      "additionalProperties": true,
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "days_from_start": { "type": "integer", "minimum": 0 },
        "dependencies": { "type": "array", "items": { "type": "string" } },
        "start": { "type": "string", "format": "date" },
        "end": { "type": "string", "format": "date" },
        "fee": { "type": "number", "default": 0 }
      }
    },
    "BillingPart": {
      "type": "object",
      "additionalProperties": true,
      "required": [],
      "properties": {
        "milestone": { "type": "string" },
        "percentage": { "type": "integer", "minimum": 0, "maximum": 100 },
        "description": { "type": "string" },
        "when": { "type": "string" },
        "percent": { "type": "integer", "minimum": 0, "maximum": 100 }
      }
    },
    "Risk": {
      "type": "object",
      "additionalProperties": true,
      "required": ["description", "impact", "probability", "mitigation"],
      "properties": {
        "description": { "type": "string" },
        "impact": { "type": "string", "enum": ["High", "Medium", "Low"] },
        "probability": { "type": "string", "enum": ["High", "Medium", "Low"] },
        "mitigation": { "type": "string" }
      }
    },
    "CommercialTerms": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "payment_terms": { "type": "string" },
        "payment_methods": { "type": "string" },
        "change_requests": { "type": "string" },
        "ip_rights": { "type": "string" },
        "warranty": { "type": "string" },
        "termination": { "type": "string" }
      }
    }
  }
}
