{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FROMPartyInput",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": { "type": "string", "minLength": 2, "maxLength": 120 },
    "contact_person": { "type": "string" },
    "email": { "type": "string", "format": "email" },
    "phone": { "type": "string" },
    "website": { "type": "string" },
    "gstin": { "type": "string" },
    "pan": { "type": "string" },
    "cin": { "type": "string" },
    "billing_address": { "$ref": "#/$defs/Address" },
    "bank": { "$ref": "#/$defs/Bank" },
    "tax_prefs": { "$ref": "#/$defs/TaxPrefs" },
    "branding": { "$ref": "#/$defs/Branding" },
    "notes": { "type": "string", "maxLength": 1000 }
  },
  "$defs": {
    "Address": {
      "type": "object",
      "properties": {
        "line1": { "type": "string" },
        "line2": { "type": "string" },
        "city": { "type": "string" },
        "state": { "type": "string" },
        "state_code": { "type": "string" },
        "postal_code": { "type": "string" },
        "country": { "type": "string", "default": "India" },
        "country_code": { "type": "string", "default": "IN" }
      }
    },
    "Bank": {
      "type": "object",
      "properties": {
        "bank_name": { "type": "string" },
        "branch": { "type": "string" },
        "account_name": { "type": "string" },
        "account_no": { "type": "string" },
        "ifsc": { "type": "string" },
        "swift": { "type": "string" },
        "iban": { "type": "string" },
        "upi_id": { "type": "string" }
      }
    },
    "TaxPrefs": {
      "type": "object",
      "properties": {
        "place_of_supply": { "type": "string" },
        "reverse_charge": { "type": "boolean", "default": false },
        "e_invoice": { "type": "boolean", "default": false }
      }
    },
    "Branding": {
      "type": "object",
      "properties": {
        "logo_url": { "type": "string" },
        "accent_color": { "type": "string" },
        "footer_text": { "type": "string" }
      }
    }
  }
}
